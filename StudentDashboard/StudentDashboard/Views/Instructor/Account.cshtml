@{
    ViewBag.Title = "Account Details";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_InstructorLayout.cshtml";
}
@using StudentDashboard.Models;
@model InstructorRegisterModel
<div class="container-fluid">
    <div class="card shadow mb-4 border-left-primary">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Account Details</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                    @*<div class="dropdown-header">Dropdown Header:</div>*@
                    <a class="dropdown-item" href="./EditAccount">Edit Account Details</a>
                    <a class="dropdown-item" href="./ChangePassword">Change password</a>
                    @*<div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>*@
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            <form>
                <div class="form-group row">
                    <label for="staticName" class="col-sm-2 col-form-label text-success font-weight-bolder">Name:</label>
                    <div class="col-sm-10">
                        <input type="text" disabled class="form-control-plaintext " id="staticName" value="@Model.m_strFirstName.ToString() @Model.m_strLastName.ToString()">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail"  class="col-sm-2 col-form-label text-success font-weight-bolder">Email:</label>
                    <div class="col-sm-10">
                        <input type="text" disabled class="form-control-plaintext" id="staticEmail" value="@Model.m_strEmail">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticPhone" class="col-sm-2 col-form-label text-success font-weight-bolder">Phone No:</label>
                    <div class="col-sm-10">
                        <input type="text" disabled class="form-control-plaintext" id="staticPhone" value="@Model.m_strPhoneNo">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticDate1" class="col-sm-2 col-form-label text-success font-weight-bolder">Date Of Joining:</label>
                    <div class="col-sm-10">
                        <input type="text" disabled class="form-control-plaintext" id="staticDate1" value="@Model.m_dtDateOfJoining">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticAddress" class="col-sm-2 col-form-label text-success font-weight-bolder">Address:</label>
                    <div class="col-sm-10">
                        <input type="text" disabled class="form-control-plaintext" id="staticAddress" value="@Model.m_strFullAddress">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticDate2" class="col-sm-2 col-form-label text-success font-weight-bolder">Last Updated:</label>
                    <div class="col-sm-10">
                        <input type="text" disabled class="form-control-plaintext" id="staticDate2" value="@Model.m_dtLastUpdated">
                    </div>
                </div>
              
            </form>
        </div>
    </div>
</div>



