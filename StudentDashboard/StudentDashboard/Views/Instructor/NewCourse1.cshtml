                                                <div class="card-body">
                                                    <div class="form-group row">
                                                        <label for="inputPassword" class="col-sm-3 col-form-label">Question statement</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control" id="inputPassword" placeholder="Enter question">
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputPassword" class="col-sm-3 col-form-label">Option 1</label>
                                                        <div class="col-sm-8 mb-2">
                                                            <input type="text" class="form-control" id="inputPassword" placeholder="Enter question 1">
                                                        </div>
                                                        <label for="inputPassword" class="col-sm-3 col-form-label">Option 2</label>
                                                        <div class="col-sm-8 mb-2">
                                                            <input type="text" class="form-control" id="inputPassword" placeholder="Enter question 2">
                                                        </div>
                                                        <label for="inputPassword" class="col-sm-3 col-form-label">Option 3</label>
                                                        <div class="col-sm-8 mb-2">
                                                            <input type="text" class="form-control" id="inputPassword" placeholder="Enter question 3">
                                                        </div>
                                                        <label for="inputPassword" class="col-sm-3 col-form-label">Option 4</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control" id="inputPassword" placeholder="Enter question 4">
                                                        </div>
                                                        <hr />

                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="sel1" class="col-sm-3 col-form-label">Select Correct Option</label>
                                                        <div class="col-sm-8">
                                                            <select class="form-control" id="sel1">
                                                                <option value="opt1">select...</option>
                                                                <option value="opt1">Option 1</option>
                                                                <option value="opt2">Option 2</option>
                                                                <option value="opt3">Option 3</option>
                                                                <option value="opt4">Option 4</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary" onclick="addAssignmentMcqQuestion()">Add Question</button>
                                        <button type="button" class="btn btn-outline-primary">Next</button>
                                    </div>

                                </div>
                            </div>

                        </form>
                    </div>
                    <!--Section Test contesnt content-->
                    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                        <form>
                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                <div class="card">
                                    <div class="card-body">

                                        <h5 class="card-title">Add Tets Details</h5>
                                        <div class="form-group row">
                                            <label for="inputPassword" class="col-sm-3 col-form-label">Name of Test*</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="inputPassword" placeholder="Enter name of course">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputPassword" class="col-sm-3 col-form-label">Description of Test</label>
                                            <div class="col-sm-8">
                                                <textarea type="text" placeholder="Enter course description" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="sel1" class="col-sm-3 col-form-label">Select Assignment type:</label>
                                            <div class="col-sm-8">
                                                <select class="form-control" id="sel1">
                                                    <option>MCQ</option>
                                                    <option>Subjective</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="sel1" class="col-sm-3 col-form-label">Time of test(Hours:minutes)*</label>
                                            <div class="col-sm-8">
                                                <div class="col-sm-8">
                                                    <input type="time" class="without_ampm" id="inputPassword" placeholder="Enter question">
                                                </div>
                                            </div>
                                        </div>
                                        <!--Options section-->
                                        <div class="assignment-question-container" id="testSubjectiveContainer">
                                            <div class="card test-subjective-section">
                                                <div class="card-body">
                                                    <div class="form-group row">
                                                        <label for="inputPassword" class="col-sm-3 col-form-label">Question statement</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control" id="inputPassword" placeholder="Enter question">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <button type="button" class="btn btn-outline-primary" onclick="addTestSubjectiveQuestion()">Add Question</button>
                                        <button type="button" class="btn btn-outline-primary">Save</button>
                                    </div>

                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
