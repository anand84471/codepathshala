                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                <div class="card">
                                    @*<div class="card-header">
                                            for more details
                                        </div>*@
                                    <div class="card-body">

                                        <h5 class="card-title">Add Assignment Details</h5>
