    ViewBag.Title = "ReadMyCourse | MAEG Award- Most Appreciated Educator around the Globe Award";
    Layout = "~/Views/Shared/_AboutLayout.cshtml";
}
<link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
<style type="text/css">
    .header-award {
        padding-left: 0px;
        padding-right: 0px;
        max-width: 100vw;
        min-height: 50vh;
        min-width: 90vw;
    }
    .poster-content {
        padding-left: 0px;
        padding-right: 0px;
        min-width: 50vw;
        min-width:50vh;
        background-color:blueviolet;
    }
    .poster-left{

    }
    .header-img {
        max-height: 40vh;
        max-width: 100vw;
    }
    .hideable-on-small{

    }
    .poster-right{
        

    }
    .poster-body{
        padding:3rem;
    }
    .animate {
        transition: all 0.1s;
        -webkit-transition: all 0.1s;
    }

    .action-button {
        padding: 10px 40px;
        border-radius: 10px;
        font-family: 'Pacifico', cursive;
        font-size: 25px;
        color: #FFF;
