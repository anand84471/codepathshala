@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="CodePathshalaAdmin" content="">
    <title>CodePathshala: Home</title>
    <!-- Custom fonts for this template-->
    <link href="../../Scripts/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="../../fonts/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome to the CodePathsahala!</h1>
                                    </div>
                                    <form method="post" class="needs-validation" action="/Student/ValidateLogin" autocomplete="off" novalidate>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text"><i class="fa fa-envelope"></i></div>
                                                </div>
                                                <input type="email" class="form-control" name="userEmail" id="userEmail" aria-describedby="emailHelp" placeholder="Enter Email Address..." required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text"><i class="fa fa-lock"></i></div>
                                                </div>
                                                <input type="password" class="form-control" name="userPassword" id="userPassword" placeholder="Password" required>
                                            </div>
                                        </div>
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input onchange="$(this).val($(this).is(':checked'));" type="checkbox" class="custom-control-input" id="customCheck" name="remeberMe" value="true">
                                                <label class="custom-control-label" for="customCheck">Remember Me</label>
                                            </div>
                                        </div>
                                        @if (ViewBag.IsLoggedIn != null)
                                        {
                                            if (ViewBag.IsLoggedIn)
                                            {
                                                <div class="alert alert-success" role="alert" name="loginMessage1">
                                                    Successfully Logged In!
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-primary" role="alert" name="loginMessage1">
                                                    Login failed
                                                </div>
                                            }
                                            ViewBag.IsLoggedIn = null;
                                        }
                                        <button id="submitButton" class="btn btn-primary btn-user btn-block" onsubmit="disableButton()">
                                            Login
                                        </button>
                                    </form>
                                    <hr>
                                    @*<div class="text-center">
                                            <a class="small" href="/Instructor/Forgotpassword">Forgot Password?</a>
                                        </div>*@
                                    <div class="text-center">
                                        <a class="small" href="/Student/Join">Create an Account!</a>
                                    </div>
                                    @*<div class="text-center">
                                            <a class="small" href="/">Student Login!</a>
                                        </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="../../Scripts/vendor/jquery/jquery.min.js"></script>
    <script src="../../Scripts/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="../../Scripts/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="../Scripts/js/sb-admin-2.min.js"></script>
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    <script>
        function disableButton()
        {
            var submitButton = document.getElementById("submitButton");
            submitButton.disabled = true;
            submitButton.innerText = 'Please wait'
        }
    </script>
</body>
</html>

