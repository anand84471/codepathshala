@{
    Layout = "";
}
<html lang="en">
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="CodePathshalaAdmin" content="">
    <title>ReadMyCourse -Student Login</title>
    <!-- Custom fonts for this template-->
    <link href="../../Scripts/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="../../fonts/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body style="background-image: url('../Images/bg_4.jpg');">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            @*<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>*@
                            @*<div class="col-lg-5 d-none d-lg-block bg-register-image"></div>*@
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <a href="./"><img src="../Images/site-logo-v2-full.png" class="img-fluid " alt="..."></a>
                                        <h4 class="text-gray-900 font-weight-bold mb-2">Varify Phone No.</h4>
                                        <strong class="font-weight-bold mb-2">
                                            Please enter the OTP sent to u your registerd mobile no.
                                        </strong>
                                    </div>
                                    <form method="post" class="needs-validation" action="/Student/VarifyPhoneNo?redirect_url=@ViewBag.redirectUrl" autocomplete="off" novalidate>
                                        <div class="form-group">
                                            @Html.AntiForgeryToken()
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text"><i class="fa fa-lock"></i></div>
                                                </div>
                                                <input type="tel" pattern=".{6,}" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" size="6" maxlength="6" class="form-control" name="otp" ria-describedby="emailHelp" placeholder="Enter enter otp..." required>
                                            </div>
                                        </div>
                                        <input type="hidden" name="token" value="@ViewBag.Token" required>
                                        <input type="hidden" name="userName" value="@ViewBag.userId" required>
                                        @if (ViewBag.InvalidOtp != null)
                                        {
                                            if (ViewBag.InvalidOtp)
                                            {
                                                <div class="alert alert-danger" role="alert" name="loginMessage1">
                                                    Otp validation failed!
                                                </div>
                                            }

                                            ViewBag.InvalidOtp = null;
                                        }
                                        <button type="submit" id="submitButton" class="btn btn-primary btn-user btn-block" onsubmit="disableButton()">
                                            Submit
                                        </button>
                                    </form>
                                    <hr>

                                    <div class="text-center">
                                        <a class="small" href="/Student">Login</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 d-none d-lg-block bg-register-image"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="../../Scripts/vendor/jquery/jquery.min.js"></script>
    <script src="../../Scripts/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="../../Scripts/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="../Scripts/js/sb-admin-2.min.js"></script>
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    <script>
        function disableButton() {
            var submitButton = document.getElementById("submitButton");
            submitButton.disabled = true;
            submitButton.innerText = 'Please wait'
        }
    </script>
</body>
</html>

