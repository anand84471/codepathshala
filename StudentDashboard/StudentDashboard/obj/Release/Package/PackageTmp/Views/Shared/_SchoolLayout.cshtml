    function callContact() {
        //accordionSidebar
        $('#accordionSidebar').addClass("toggled");
        $.ajax({
            url: '@Url.Action("Contact", "Student")',
            type: 'GET',
            success: function (data) {
                $("#body").html(data);
                window.history.pushState({ "html": data, "pageTitle": "Contact Us" }, "", "Contact");
