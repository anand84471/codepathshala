<script type="text/javascript">

    $('#contactPage').click(function () {
        callContact();
    });
    $('#activityLogPage').click(function () {
        callActivity();
    });
    $('#editAccountPage').click(function () {
        callEditAccount();
    });
    $('#profilePage').click(function () {
        callAccount();
    });
</script>
<script type="text/javascript">
